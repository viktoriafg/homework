//k-ый по величине
#include <iostream>
using namespace std;
void swap(int *a, int *b) {
	int k;
	k = *a;
	*a = *b;
	*b = k;
}

int ss(int *a, int k, int l, int r)
{
	int s, m, i = l, j = r, tmp;
	if (l == r) return a[r];
	s = (l + r) / 2;
	m = a[s];
	while (i < j) {
		while (a[i] < m) i++;
		while (a[j] > m) j--;
		if (i < j)
		{
			swap(a+i, a+j);
			i++; j--;
		}
	}
	if (k <= j) return ss(a, k, l, j);
	else return ss(a, k, j + 1, r);
}

int main() {
	int n, m, k;
	cout<< "Enter size \n";
	cin>>n;
	cout<< "Enter k \n";
	cin>>k;
	int *a = new int[n + 1];
	for (int i = 0; i < n; i++) {
		a[i] = rand() % 20;
	}
	for(int i = 0; i<n; i++)
        cout<< a[i] << " ";
    cout << endl;
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            if(i != j)
                if (a[i] == a[j]) {
                    swap(a[n - 1], a[j]);
                    n--;
                }
    for(int i = 0; i<n; i++)
        cout<< a[i] << " ";
    cout << endl;
	m = ss(a, k, 0, n);
    for(int i = 0; i<n; i++)
        cout<< a[i] << " ";
    cout << endl;
    cout<< m ;
	system("pause");
    return 0;
}
